<h1><%= current_user.name %>'s Reviews</h1>
<table class="table table-hover table-striped">
  <thead>
    <tr>
      <th>Title</th>
      <th>Rating</th>
      <th>Description</th>
      <th>Created At</th>
      <th>Updated At</th>
    </tr>
  </thead>
  <tbody>
    <% @reviews.each do |review| %>
    <tr id="reviews-<%= review.id %>">
      <td><%= review.title %></td>
      <td>Rating: <%= review.rating %></td>
      <td><%= review.description %></td>
      <td><%= review.created_at.localtime.strftime("%B, %d %Y at %I:%M %p") %></td>
      <% unless review.created_at == review.updated_at %>
        <td>Updated At: <%= review.updated_at.localtime.strftime("%B, %d %Y at %I:%M %p") %></td>
      <% end %>
      <td><%= link_to "Edit Review", edit_profile_review_path(review) %></td>
    </tr>
    <% end %>
  </tbody>
</table>
